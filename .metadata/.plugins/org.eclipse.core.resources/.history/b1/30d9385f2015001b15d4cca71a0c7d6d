
public class NestedForLoops {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		for(int i = 0; i <5; i++) {
			System.out.println("It's a nice weather!");
		}
		
		String[] colors = {"Red", "Blue", " Yellow"};
		
		for (int i = 0; i < 3; i++) {
			System.out.println(colors[i]);
		}

	}

}
